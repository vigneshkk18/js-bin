{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "ui/*": [
        "src/ui/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "db/*": [
        "src/db/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "bundler/*": [
        "src/bundler/*"
      ],
      "transpiler/*": [
        "src/transpiler/*"
      ],
      "fs/*": [
        "src/fs/*"
      ],
      "formatter/*": [
        "src/formatter/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}